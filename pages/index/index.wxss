.custom-bar {
  /* background-color: #aaa; */
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
}

.custom-bar-search {
  display: flex;
  flex-direction: row;
  padding-left: 10px;
  margin-left: 12px;
  margin-right: 12px;
  height: 100%;
  width: 100%;
  border-radius: 15px;
  align-items: center;
  background-color: #f5f5f5;
}

.content-text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}