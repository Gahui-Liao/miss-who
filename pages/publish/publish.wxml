<cu-custom bgColor="bg-white" isBack="{{true}}">
  <view slot="backText" class="text-black">返回</view>
  <view slot="content" class="text-bold text-black">发布</view>
</cu-custom>
<view class="cu-form-group margin-top-xs">
  <textarea style="height: 200px;" maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="在这里你可以分享学校的大事件、自己的心情等等~"></textarea>
</view>
<view class="bg-white padding-lr">
  <view class="grid col-3 grid-square flex-sub">
    <view class="bg-img" wx:for="{{imgList}}" wx:key="index" bindtap="viewImage" data-url="{{imgList[index]}}">
      <image src='{{imgList[index]}}' mode='aspectFill'></image>
      <view class="cu-tag bg-red" catchtap="delImg" data-index="index">
        <text class="cuIcon-close"></text>
      </view>
    </view>
    <view class="solids" bindtap="chooseImage" wx:if="{{imgList.length<3}}">
      <text class="cuIcon-cameraadd"></text>
    </view>
  </view>
</view>
