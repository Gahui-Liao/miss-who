    </view>
  </picker>
</view>
<view class="cu-bar tabbar bg-white shadow foot">
  <view class="cu-bar btn-group">
    <button class="cu-btn bg-gradual-blue shadow-blur round lg" bindtap="publishBindTap">立即发布</button>
  </view>
</view>